{
  "name": "@scribe/sync-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "db:migrate": "wrangler d1 migrations apply scribe-sync-db",
    "db:migrate:local": "wrangler d1 migrations apply scribe-sync-db --local",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.10",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@scribe/eslint-config": "workspace:*",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18",
    "wrangler": "^4.63.0"
  }
}
