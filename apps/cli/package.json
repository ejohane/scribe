{
  "name": "@scribe/cli",
  "version": "0.1.0",
  "private": true,
  "description": "Scribe CLI - Command-line interface for note-taking",
  "type": "module",
  "bin": {
    "scribe": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir dist --sourcemap --target bun",
    "build:binary": "bun build ./src/index.ts --compile --outfile dist/scribe",
    "build:binary:darwin-arm64": "bun build ./src/index.ts --compile --target=bun-darwin-arm64 --outfile dist/scribe-darwin-arm64",
    "build:binary:darwin-x64": "bun build ./src/index.ts --compile --target=bun-darwin-x64 --outfile dist/scribe-darwin-x64",
    "build:binary:linux-x64": "bun build ./src/index.ts --compile --target=bun-linux-x64 --outfile dist/scribe-linux-x64",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist scribe"
  },
  "dependencies": {
    "@scribe/engine-core": "workspace:*",
    "@scribe/engine-graph": "workspace:*",
    "@scribe/engine-search": "workspace:*",
    "@scribe/shared": "workspace:*",
    "@scribe/storage-fs": "workspace:*",
    "commander": "^14.0.2"
  },
  "devDependencies": {
    "@scribe/eslint-config": "workspace:*",
    "@scribe/test-utils": "workspace:*",
    "@scribe/tsconfig": "workspace:*",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "packageManager": "bun@1.1.38"
}
