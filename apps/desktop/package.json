{
  "name": "@scribe/desktop",
  "version": "0.1.0",
  "private": true,
  "description": "Scribe - A note-taking application",
  "author": "Scribe Team",
  "main": "electron/main/dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "node dev.mjs",
    "dev:renderer": "cd renderer && bun run dev",
    "dev:main": "cd electron/main && bun run dev",
    "dev:preload": "cd electron/preload && bun run dev",
    "build": "bun run build:renderer && bun run build:main && bun run build:preload && bun run build:cli && bun run build:raycast",
    "build:cli": "cd ../cli && bun run build:binary && mkdir -p ../desktop/resources/bin && cp dist/scribe ../desktop/resources/bin/",
    "build:raycast": "mkdir -p resources/raycast-extension && cp -r ../raycast/src ../raycast/package.json ../raycast/tsconfig.json ../raycast/assets resources/raycast-extension/",
    "build:renderer": "cd renderer && bun run build",
    "build:main": "cd electron/main && bun run build",
    "build:preload": "cd electron/preload && bun run build",
    "dist": "bun run build && electron-builder --publish never",
    "dist:mac": "bun run build && electron-builder --mac --publish never",
    "dist:win": "bun run build && electron-builder --win --publish never",
    "start": "../../node_modules/.bin/electron .",
    "clean": "rm -rf renderer/dist electron/main/dist electron/preload/dist",
    "lint": "cd electron/main && eslint src && cd ../preload && eslint src",
    "test": "bun test *.integration.test.ts && cd electron/main && bun run test && cd ../preload && bun run test && cd ../../renderer && bun run test"
  },
  "build": {
    "appId": "com.scribe.app",
    "electronVersion": "33.2.0",
    "productName": "Scribe",
    "publish": {
      "provider": "github",
      "owner": "ejohane",
      "repo": "scribe"
    },
    "copyright": "Copyright Â© 2025 Scribe Team",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/main/dist/**/*",
      "electron/preload/dist/**/*",
      "renderer/dist/**/*",
      "resources/bin/**/*",
      "resources/raycast-extension/**/*",
      "!**/node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/raycast-extension",
        "to": "raycast-extension",
        "filter": [
          "**/*"
        ]
      }
    ],
    "protocols": [
      {
        "name": "Scribe",
        "schemes": [
          "scribe"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": true
    },
    "dmg": {
      "artifactName": "${productName}-${arch}.${ext}",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "artifactName": "${productName}-Setup.${ext}",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "artifactName": "${productName}.${ext}"
    },
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "asar": true,
    "asarUnpack": []
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.16",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "turbo": "^2.3.3"
  },
  "packageManager": "bun@1.1.38"
}
