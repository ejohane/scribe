{
  "name": "scribe",
  "private": true,
  "version": "0.1.0",
  "description": "Personal note-taking system with markdown parsing, graph visualization, and intelligent search",
  "workspaces": [
    "packages/*",
    "config/*",
    "apps/desktop/*"
  ],
  "scripts": {
    "dev": "cd apps/desktop && bun run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "eslint": "^9.16.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "bun@1.1.38",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
