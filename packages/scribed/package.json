{
  "name": "@scribe/scribed",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "bin": {
    "scribed": "./dist/cli.js"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "tsup src/cli.ts --format esm",
    "dev": "tsup src/cli.ts --format esm --watch",
    "build:binary": "bun build ./src/cli.ts --compile --outfile dist/scribed",
    "build:binary:darwin-arm64": "bun build ./src/cli.ts --compile --target=bun-darwin-arm64 --outfile dist/scribed-darwin-arm64",
    "build:binary:darwin-x64": "bun build ./src/cli.ts --compile --target=bun-darwin-x64 --outfile dist/scribed-darwin-x64",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "test": "vitest run src/plugins/router-merger.test.ts src/plugins/error-handler.test.ts --passWithNoTests",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@scribe/plugin-core": "workspace:*",
    "@scribe/server-core": "workspace:*",
    "@trpc/server": "^11.9.0",
    "commander": "^14.0.2",
    "nanoid": "^5.0.9",
    "ws": "^8.18.0",
    "yjs": "^13.6.29"
  },
  "devDependencies": {
    "@scribe/eslint-config": "workspace:*",
    "@scribe/tsconfig": "workspace:*",
    "@types/ws": "^8.5.13",
    "tsup": "^8.3.5",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
